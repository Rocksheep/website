{
  // Configure PHP Mess detector
  "phpmd.validate.rulesetsFile": "./phpmd.xml",
  "phpmd.validate.executablePath": "./vendor/bin/phpmd",

  // Configure PHP_CodeSniffer
  "phpcs.executablePath": "./vendor/bin/phpcs",
  "phpcs.autoConfigSearch": true,

  // Don't auto-complete PHP, let PHP-Intellisense work it out.
  "php.suggest.basic": false,
}
