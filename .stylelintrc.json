{
  "extends": "@gumbo-millennium/stylelint-config",
  "rules": {
    "comment-empty-line-before": "always",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "variants",
          "screen"
        ]
      }
    ],
    "unit-whitelist": [
      "%",
      "deg",
      "fr",
      "ms",
      "px",
      "rem",
      "s",
      "vh",
      "vmax",
      "vmin",
      "vw"
    ]

  }
}
